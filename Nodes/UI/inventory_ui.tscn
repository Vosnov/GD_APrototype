[sub_resource type="GDScript" id="GDScript_cyvqe"]
script/source = "extends HBoxContainer

@export var SLOT: PackedScene

func _ready():
	fill_grid(Inventory.SLOTS)

func fill_grid(slots: Array[SlotData]):
	for child in get_children():
		child.queue_free()
	
	var index = 0
	for slot in slots:
		var slot_instance = SLOT.instantiate() as SlotUI
		add_child(slot_instance)
		if index == 0:
			slot_instance.grab_focus()
		slot_instance.set_slot_data(slot)
		index += 1
"

[sub_resource type="GDScript" id="GDScript_ovlbg"]
script/source = "extends GridContainer

@export var SLOT_GUN_UI: PackedScene

@onready var slot_container_1 = $SlotContainer1
@onready var slot_container_4 = $SlotContainer4
@onready var slot_container_2 = $SlotContainer2
@onready var slot_container_3 = $SlotContainer3

func _ready():
	var panels = {
		0: slot_container_1,
		1: slot_container_2,
		2: slot_container_3,
		3: slot_container_4
	}
	
	for gun_slot in Inventory.GUN_SLOTS:
		if not panels.has(gun_slot.INDEX): continue
		var panel = panels[gun_slot.INDEX] as Control
		var slot_ui = SLOT_GUN_UI.instantiate() as SlotGunUI
		panel.add_child(slot_ui)
		slot_ui.set_slot_data(gun_slot)
"

